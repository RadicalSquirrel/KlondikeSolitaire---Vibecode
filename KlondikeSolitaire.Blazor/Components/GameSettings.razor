@using KlondikeSolitaire.Core.Models

<div class="settings-overlay @(IsVisible ? "visible" : "")" @onclick="OnOverlayClick">
    <div class="settings-dialog" @onclick:stopPropagation>
        <div class="settings-header">
            <h2>New Game Settings</h2>
            <button class="close-btn" @onclick="OnClose">âœ•</button>
        </div>

        <div class="settings-body">
            <div class="setting-group">
                <label>Draw</label>
                <select @bind="drawCountString" class="setting-select">
                    <option value="1">1 Card</option>
                    <option value="3">3 Cards</option>
                </select>
            </div>

            <div class="setting-group">
                <label>Redeals</label>
                <select @bind="redealString" class="setting-select">
                    <option value="-1">Unlimited</option>
                    <option value="0">None</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                </select>
            </div>

            <div class="setting-group">
                <label>
                    <input type="checkbox" @bind="options.AllowAnyCardInEmptyTableau" />
                    <span>Any card in empty column</span>
                </label>
            </div>

            <div class="setting-group">
                <label>
                    <input type="checkbox" @bind="options.AllowFoundationToTableau" />
                    <span>Foundation to tableau</span>
                </label>
            </div>

            <div class="setting-group">
                <label>
                    <input type="checkbox" @bind="options.EnableScoring" />
                    <span>Scoring</span>
                </label>
            </div>

            <div class="setting-group">
                <label>
                    <input type="checkbox" @bind="options.NotifyWhenNoMovesAvailable" />
                    <span>Game over notification</span>
                </label>
            </div>

            <div class="setting-group">
                <label>
                    <input type="checkbox" @bind="options.AutoCompleteWhenPossible" />
                    <span>Auto-complete</span>
                </label>
            </div>
        </div>

        <div class="settings-footer">
            <button @onclick="OnStartGame" class="btn btn-primary">Start Game</button>
            <button @onclick="OnClose" class="btn btn-secondary">Cancel</button>
        </div>
    </div>
</div>

<style>
    .settings-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.7);
        display: none;
        align-items: center;
        justify-content: center;
        z-index: 1000;
    }

    .settings-overlay.visible {
        display: flex;
    }

    .settings-dialog {
        background: white;
        border-radius: 12px;
        width: 90%;
        max-width: 600px;
        max-height: 90vh;
        overflow: auto;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
    }

    .settings-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 16px 20px;
        border-bottom: 1px solid #e0e0e0;
    }

    .settings-header h2 {
        margin: 0;
        color: #333;
        font-size: 1.4rem;
    }

    .close-btn {
        background: none;
        border: none;
        font-size: 1.8rem;
        cursor: pointer;
        color: #757575;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        transition: all 0.2s ease;
    }

    .close-btn:hover {
        background: #f5f5f5;
        color: #333;
    }

    .settings-body {
        padding: 20px;
    }

    .setting-group {
        margin-bottom: 16px;
    }

    .setting-group label {
        display: block;
        font-weight: 600;
        color: #333;
        margin-bottom: 6px;
        font-size: 0.95rem;
    }

    .setting-group label input[type="checkbox"] {
        margin-right: 8px;
        width: 16px;
        height: 16px;
        cursor: pointer;
    }

    .setting-group label span {
        cursor: pointer;
        font-size: 0.95rem;
    }

    .setting-select {
        width: 100%;
        padding: 8px 10px;
        border: 1px solid #ccc;
        border-radius: 6px;
        font-size: 0.95rem;
        background: white;
        cursor: pointer;
        transition: border-color 0.2s ease;
    }

    .setting-select:focus {
        outline: none;
        border-color: #4CAF50;
    }

    .settings-footer {
        padding: 16px 20px;
        border-top: 1px solid #e0e0e0;
        display: flex;
        gap: 10px;
        justify-content: flex-end;
    }

    @@media (max-width: 480px) {
        .settings-dialog {
            max-width: 95%;
        }

        .settings-header h2 {
            font-size: 1.2rem;
        }

        .settings-body {
            padding: 16px;
        }

        .setting-group {
            margin-bottom: 14px;
        }

        .settings-footer {
            padding: 14px 16px;
        }
    }
</style>

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public EventCallback<GameOptions> OnStartNewGame { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public GameOptions? LastGameOptions { get; set; }

    private GameOptions options = new GameOptions();
    private string drawCountString = "3";
    private string redealString = "-1";

    protected override void OnParametersSet()
    {
        // If we have last game options, use those; otherwise use defaults
        if (LastGameOptions != null)
        {
            options = new GameOptions
            {
                AllowAnyCardInEmptyTableau = LastGameOptions.AllowAnyCardInEmptyTableau,
                DrawCount = LastGameOptions.DrawCount,
                AllowFoundationToTableau = LastGameOptions.AllowFoundationToTableau,
                MaxStockRedeals = LastGameOptions.MaxStockRedeals,
                EnableScoring = LastGameOptions.EnableScoring,
                NotifyWhenNoMovesAvailable = LastGameOptions.NotifyWhenNoMovesAvailable,
                AutoCompleteWhenPossible = LastGameOptions.AutoCompleteWhenPossible
            };
            drawCountString = LastGameOptions.DrawCount.ToString();
            redealString = LastGameOptions.MaxStockRedeals.ToString();
        }
        else
        {
            ResetToDefaults();
        }
    }

    private void ResetToDefaults()
    {
        options = new GameOptions
        {
            AllowAnyCardInEmptyTableau = false,
            DrawCount = 3,
            AllowFoundationToTableau = false,
            MaxStockRedeals = -1,
            EnableScoring = true,
            NotifyWhenNoMovesAvailable = true,
            AutoCompleteWhenPossible = true
        };
        drawCountString = "3";
        redealString = "-1";
    }

    private async Task OnStartGame()
    {
        options.DrawCount = int.Parse(drawCountString);
        options.MaxStockRedeals = int.Parse(redealString);

        await OnStartNewGame.InvokeAsync(options);
    }

    private async Task OnClose()
    {
        await OnCancel.InvokeAsync();
    }

    private async Task OnOverlayClick()
    {
        await OnClose();
    }
}
